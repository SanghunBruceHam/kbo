{
  "name": "kbo-magic-number-calculator",
  "version": "2.0.0",
  "description": "🏆 KBO 매직넘버 계산기 - 2025 KBO 리그 실시간 매직넘버, 플레이오프 진출 조건 계산 및 자동화 시스템",
  "main": "magic-number/scripts/process-season-data.js",
  "homepage": "https://kbo-dashboard.co.kr/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SanghunBruceHam/kbo.git"
  },
  "scripts": {
    "process": "node magic-number/scripts/runner.js magic-number/scripts/process-season-data.js",
    "update-data": "node magic-number/scripts/runner.js magic-number/scripts/process-season-data.js && echo '✅ KBO 데이터 업데이트 완료!'",
    "crawl": "node magic-number/scripts/runner.js magic-number/crawlers/kbo-python-working-crawler.py",
    "analysis": "npm run enhanced-dashboard && npm run weekly-analysis && npm run clutch-analysis && npm run home-away-analysis && npm run series-analysis",
    "enhanced-dashboard": "node magic-number/scripts/runner.js magic-number/scripts/generate-enhanced-dashboard.js",
    "weekly-analysis": "node magic-number/scripts/runner.js magic-number/scripts/weekly-analysis.js",
    "clutch-analysis": "node magic-number/scripts/runner.js magic-number/scripts/clutch-analysis.js",
    "home-away-analysis": "node magic-number/scripts/runner.js magic-number/scripts/home-away-analysis.js",
    "series-analysis": "node magic-number/scripts/runner.js magic-number/scripts/series-analysis.js",
    "weekly-game-analysis": "node magic-number/scripts/runner.js magic-number/scripts/weekly-game-analysis.js",
    "rank-matrix": "node magic-number/scripts/runner.js magic-number/scripts/calculate-magic-numbers.js",
    "parse-season-data": "node magic-number/scripts/runner.js magic-number/scripts/parse-season-data.js",
    "database-update": "node magic-number/scripts/runner.js magic-number/scripts/enhanced-kbo-database.js",
    "full-update": "npm run process && npm run database-update && npm run analysis && echo '🎉 전체 업데이트 완료!'",
    "serve": "npx http-server magic-number -p 8080",
    "test": "node magic-number/scripts/test-paths.js",
    "test-paths": "node magic-number/scripts/test-cross-platform-paths.js",
    "validate": "node magic-number/scripts/runner.js --help",
    "help": "node magic-number/scripts/runner.js --help"
  },
  "keywords": [
    "kbo",
    "baseball",
    "magic-number",
    "playoff",
    "sports-data",
    "scraping",
    "automation",
    "github-actions",
    "korean-baseball",
    "pwa",
    "calculator"
  ],
  "author": "SanghunBruceHam",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "cheerio": "^1.1.2",
    "puppeteer": "^24.15.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "nodemon": "^3.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/SanghunBruceHam/kbo/issues"
  }
}
