{
  "name": "kbo-magic-number-calculator",
  "version": "2.0.0",
  "description": "🏆 KBO 매직넘버 계산기 - 2025 KBO 리그 실시간 매직넘버, 플레이오프 진출 조건 계산 및 자동화 시스템",
  "main": "magic-number/scripts/02_season-data-processor.js",
  "homepage": "https://kbo-dashboard.co.kr/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SanghunBruceHam/kbo.git"
  },
  "scripts": {
    "process": "node magic-number/scripts/util-runner.js magic-number/scripts/02_season-data-processor.js",
    "update-data": "node magic-number/scripts/util-runner.js magic-number/scripts/02_season-data-processor.js && echo '✅ KBO 데이터 업데이트 완료!'",
    "crawl": "node magic-number/scripts/util-runner.js magic-number/crawlers/kbo-python-working-crawler.py",
    "analysis": "npm run enhanced-dashboard && npm run weekly-analysis && npm run clutch-analysis && npm run home-away-analysis && npm run series-analysis && npm run monthly-analysis && npm run weekday-analysis && npm run stadium-analysis",
    "enhanced-dashboard": "node magic-number/scripts/util-runner.js magic-number/scripts/stats-comprehensive-generator.js",
    "weekly-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-weekly.js",
    "clutch-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-clutch.js",
    "home-away-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-home-away.js",
    "series-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-series.js",
    "weekly-game-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-weekly.js",
    "rank-matrix": "node magic-number/scripts/util-runner.js magic-number/scripts/01_magic-number-calculator.js",
    "parse-season-data": "node magic-number/scripts/util-runner.js magic-number/scripts/03_season-data-parser.js",
    "monthly-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-monthly.js",
    "weekday-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-weekday.js",
    "stadium-analysis": "node magic-number/scripts/util-runner.js magic-number/scripts/analysis-stadium.js",
    "generate-raw-records": "node magic-number/scripts/util-runner.js magic-number/scripts/generate-raw-game-records.js",
    "full-update": "npm run process && npm run analysis && echo '🎉 전체 업데이트 완료!'",
    "serve": "npx http-server magic-number -p 8080",
    "test": "node magic-number/scripts/test-paths.js",
    "test-paths": "node magic-number/scripts/test-cross-platform-paths.js",
    "validate": "node magic-number/scripts/util-runner.js --help",
    "help": "node magic-number/scripts/util-runner.js --help",
    "precompute-ui": "node scripts/generate-ui-precomputed-data.js",
    "precompute-matrix": "node magic-number/scripts/generate-magic-matrix-precomputed.js", 
    "precompute-all": "npm run precompute-ui && npm run precompute-matrix && echo '🚀 모든 사전계산 완료!'",
    "performance-check": "node scripts/quick-performance-check.js",
    "optimize": "npm run precompute-all && npm run performance-check"
  },
  "keywords": [
    "kbo",
    "baseball",
    "magic-number",
    "playoff",
    "sports-data",
    "scraping",
    "automation",
    "github-actions",
    "korean-baseball",
    "pwa",
    "calculator"
  ],
  "author": "SanghunBruceHam",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "cheerio": "^1.1.2",
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "nodemon": "^3.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/SanghunBruceHam/kbo/issues"
  }
}
